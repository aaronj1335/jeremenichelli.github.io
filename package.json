{
  "name": "jeremenichelli.github.io",
  "title": "Jekyll site for jeremenichelli.github.io",
  "url": "http://jeremenichelli.github.io",
  "author": "Jeremias Menichelli",
  "copyright": "2016",
  "version": "2.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jeremenichelli/jeremenichelli.github.io.git"
  },
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "browserify": "^13.0.0",
    "cssmin": "^0.4.3",
    "eslint": "^1.10.3",
    "less": "^2.5.3",
    "ncp": "^2.0.0",
    "postcss-cli": "^2.3.3",
    "uglify-js": "^2.6.1"
  },
  "bugs": {
    "url": "https://github.com/jeremenichelli/jeremenichelli.github.io/issues"
  },
  "homepage": "https://github.com/jeremenichelli/jeremenichelli.github.io#readme",
  "description": "Personal site and blog",
  "main": "index.html",
  "scripts": {
    "clean": "rm -rf assets",
    "favicon": "ncp src/favicon/ assets/favicon",
    "img": "ncp src/img/ assets/img/",
    "js:critical": "browserify src/scripts/critical/main.js | uglifyjs > _includes/criticalJS.html",
    "js:noncritical": "browserify src/scripts/noncritical/main.js | uglifyjs > assets/scripts/site.min.js",
    "js": "npm run js:critical & npm run js:noncritical",
    "prejs": "mkdir -p assets/scripts",
    "watch:js": "onchange 'src/**/*.js' -- npm run js",
    "less:critical": "lessc src/styles/critical.less | postcss --use autoprefixer -b 'Firefox > 30, Chrome > 36, IE > 8, iOS > 6, Safari > 6' | cssmin > _includes/criticalCSS.html",
    "less:noncritical": "lessc src/styles/noncritical.less | postcss --use autoprefixer -b 'Firefox > 30, Chrome > 36, IE > 8, iOS > 6, Safari > 6' | cssmin > assets/styles/site.min.css",
    "less": "npm run less:critical & npm run less:noncritical",
    "preless": "mkdir -p assets/styles",
    "watch:less": "onchange 'src/**/*.less' -- npm run less",
    "build": "npm run favicon & npm run img & npm run less & npm run js"
  }
}
